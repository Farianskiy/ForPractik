<Page x:Class="ForPractik.View.StudentGroupUpdatePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ForPractik.View"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1200"
      Title="StudentGroupUpdatePage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel VerticalAlignment="Top" >
                <TextBlock Text="Перевести студентов на следующий курс" VerticalAlignment="Center" FontSize="18" Height="30" Width="375" Margin="20,10,0,0" Style="{StaticResource BlueTextBlockStyle}"/>

                <Button Click="btn_EditStudent"  Width="275" Height="30"
Style="{StaticResource GelButton}" Foreground="Black" FontSize="20"
Content="Перевести студентов" Margin="0,20,0,0">
                </Button>
            </StackPanel>

            <Button Click="btn_Back" Width="175" Height="30"
Style="{StaticResource GelButton}" Foreground="Black" FontSize="20"
Content="Назад" Margin="10 30 10 0" >
            </Button>

        </StackPanel>
    </Grid>
</Page>
